{
    "name": "polymita",
    "include": [
        {
            "path": "${QOOXDOO_PATH}/tool/data/config/application.json",
            "block": [
                "test",
                "test-source"
            ]
        },
        {
            "path": "${QOOXDOO_PATH}/component/standalone/server/server.json",
            "as": "server"
        }
    ],
    "export": [
        "api",
        "api-data",
        "build",
        "clean",
        "distclean",
        "dependencies",
        "fix",
        "info",
        "lint",
        "library",
        "migration",
        "pretty",
        "profiling",
        "source",
        "test",
        "test-source",
        "translation",
        "validate-config",
        "validate-manifest",
        "watch"
    ],
    "default-job": "source",
    "let": {
        "ROOT": ".",
        "APPLICATION": "polymita",
        "QOOXDOO_PATH": "./bower_components/qooxdoo-5.0.1-sdk",
        "BUILD_PATH": "${ROOT}/../${APPLICATION}-build",
        "CACHE": "./cache/qx${QOOXDOO_VERSION}",
        "LOCALES": [
            "es"
        ]
    },
    "config-warnings": {
        "job-shadowing": [
            "api-data",
            "build-files",
            "build-resources",
            "build-script",
            "dependencies",
            "source"
        ]
    },
    // You only need to edit the remainder of this file, if you want to customize
    // specific jobs, or add own job definitions.

    "jobs": {
        "basic-common": {
            "config-warnings": {
                "exclude": [
                    "qx.event.GlobalError",
                    "qx.core.Init"
                ]
            },
            "library": [
                {
                    "manifest": "${QOOXDOO_PATH}/framework/Manifest.json"
                },
                {
                    "manifest": "${ROOT}/node_modules/guaraiba/Manifest.json"
                }
            ],
            "extend": [
                "cache"
            ],
            "=include": [
                //"qx.Class",
                //"qx.Mixin",
                //"qx.Interface",
                "qx.core.BaseInit",
                "${APPLICATION}.Application"
            ],
            "exclude": [
                "qx.event.GlobalError",
                "qx.core.Init"
            ],
            "environment": {
                "qx.aspects": false,
                "qx.globalErrorHandling": false
            },
            "compile-options": {
                "paths": {
                    "app-root": ".",
                    "loader-template": "${QOOXDOO_PATH}/tool/data/generator/basic.loader.js"
                },
                "uris": {
                    "script": ".",
                    "resource": "."
                }
            },
            "lint-check": {
                "allowed-globals": [
                    "require",
                    "process",
                    "guaraiba"
                ]
            }
        },
        "source": {
            "desc": "create source version of current application",
            "extend": [
                "basic-common"
            ],
            "environment": {
                "qx.debug": true
            },
            "compile-options": {
                "paths": {
                    "file": "${SOURCE_PATH}/script/${APPLICATION}-server.js",
                    "app-root": "${SOURCE_PATH}/script"
                }
            }
        },
        "build-script": {
            "extend": [
                "basic-common"
            ],
            "environment": {
                "qx.debug": false
            },
            "compile-options": {
                "paths": {
                    "file": "${BUILD_PATH}/${APPLICATION}-server.js",
                    "app-root": "${BUILD_PATH}"
                },
                "uris": {
                    "script": "."
                }
            },
            "copy-files": {
                "files": [
                    "Jakefile",
                    "package.json"
                ],
                "source": "${ROOT}",
                "target": "${BUILD_PATH}"
            },
            "code": {
                "format": false,
                "locales": "${LOCALES}",
                "except": [
                    "*"
                ],
                "optimize": "${OPTIMIZE}",
                "lint-check": "${COMPILE_WITH_LINT}"
            }
        },
        "build-resources": {
            "extend": [
                "basic-common"
            ]
        },
        "build-files": {
            "extend": [
                "basic-common"
            ]
        },
        "library": {
            "desc": "create a local 'server' library",
            "extend": [
                "server::build-min"
            ],
            "let": {
                "BUILD_PATH": "./script",
                "SFILES_VERSION_PART": "-5.0.1"
            }
        },
        "run": {
            "shell": {
                "command": "java -cp js.jar org.mozilla.javascript.tools.shell.Main ${BUILD}/script/polymita-server.js"
            }
        },
        "run-source": {
            "extend": [
                "run"
            ],
            "let": {
                "BUILD": "source"
            }
        },
        "run-build": {
            "extend": [
                "run"
            ],
            "let": {
                "BUILD": "build"
            }
        },
        "test": {
            "extend": [
                "test-basic"
            ]
        },
        "test-source": {
            "extend": [
                "test-basic-source"
            ]
        },
        "api-data": {
            "let": {
                "API_INCLUDE": [
                    "qx.core.BaseInit",
                    "${APPLICATION}.Application"
                ],
                "API_EXCLUDE": [
                    "qx.test.*",
                    "${APPLICATION}.test.*",
                    "qx.bom.*",
                    "qx.dom.*"
                ]
            }
        },
        "dependencies": {
            "=exclude": [
                "${APPLICATION}.test.*"
            ]
        }
    }
}
